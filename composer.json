{
  "name": "alex-patterson-webdev/log",
  "description": "PSR-3 logger factories using Laminas Log",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require" : {
    "php": ">=7.4 || >=8.0",
    "psr/log" : "^1.1",
    "laminas/laminas-log" : "^2.12",
    "alex-patterson-webdev/factory" : "dev-feature/2.0.0"
  },
  "require-dev" : {
    "phpunit/phpunit" : "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Arp\\Log\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\Log\\" : "test/phpunit/"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "secure-http": false,
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
